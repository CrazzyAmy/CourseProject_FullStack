@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="zh">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Course APP</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">

        <!-- 登入區塊 -->
        <div class="card mb-4">
            <div class="card-header">
                <h5>登入取得 Token</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password">
                </div>
                <button id="btnLogin" class="btn btn-primary">登入</button>
            </div>
            <div class="card-footer">
                <strong>JWT Token:</strong>
                <div id="jwtToken" class="text-break mt-2"></div>
                <label class="form-label"><strong>Student ID</strong></label>
                <input type="text" class="form-control" id="stuId">
            </div>
        </div>

        <!-- 公開 API 測試區塊 -->
        <div class="card mb-4">
            <div class="card-header">
                <h5>公開 API 測試</h5>
            </div>
            <div class="card-body">
                <button id="btnPublicApi" class="btn btn-success">調用公開 API</button>
                <div id="publicApiResult" class="mt-3">
                    <table class="table table-striped table-bordered">
                        <thead class="table-dark">
                            <tr>
                                <th>課程代碼</th>
                                <th>課程名稱</th>
                                <th>教師</th>
                                <th>上課時數</th>
                                <th>登記課程</th>
                            </tr>
                        </thead>
                        <tbody id="courseTable">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>
        // API Base URL
        const BASE_URL = 'https://localhost:7096';
        let jwtToken = '';

        // 調用公開 API(開課清單)
        $('#btnPublicApi').click(function () {
            $.ajax({
                url: `${BASE_URL}/api/CourseSchedule`,
                type: 'GET',
                success: function (response) {
                    let tableContent = '';
                    response.forEach(function (course) {
                        tableContent += `
                                                    <tr>
                                                        <td>${course.courseCode}</td>
                                                        <td>${course.courseName}</td>
                                                        <td>${course.teacherName}</td>
                                                        <td>${course.courseTimes}</td>
                                                        <td>
                                                            <button onclick="registerCourse('${course.id}')" class="btn btn-success btn-sm">
                                                            報名課程
                                                            </button>
                                                        </td>
                                                    </tr>
                                                `;
                    });
                    $('#courseTable').html(tableContent);
                },
                error: function (xhr) {
                    const errorMessage = xhr.responseJSON && xhr.responseJSON.message
                        ? xhr.responseJSON.message
                        : '未知錯誤';
                    alert('資料取得失敗：' + errorMessage);
                }
            });
        });

        // 登入取得 Token
        $('#btnLogin').click(function () {
            const loginData = {
                email: $('#email').val(),
                password: $('#password').val()
            };

            $.ajax({
                url: `${BASE_URL}/api/login`,
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(loginData),
                success: function (response) {
                    jwtToken = response.token;
                    $('#jwtToken').text(jwtToken);
                    alert('登入成功！');
                },
                error: function (xhr) {
                    const errorMessage = xhr.responseJSON && xhr.responseJSON.message
                        ? xhr.responseJSON.message
                        : '未知錯誤';
                    alert('登入失敗：' + errorMessage);
                }
            });
        });

        


        //登記課程
        function registerCourse(courseId) {
            let stuId = $("#stuId").val();
            console.log('StudentID:', stuId);
            console.log('註冊課程ID:', courseId);

            if (!jwtToken) {
                alert('請先登入取得 Token！');
                return;
            }

            const bookingData = {
                stuId: stuId,
                scheduleId: courseId
            };

            $.ajax({
                url: `${BASE_URL}/api/booking`,
                type: 'POST',
                contentType: 'application/json',
                headers: {
                    'Authorization': `Bearer ${jwtToken}`
                },
                data: JSON.stringify(bookingData),
                success: function (response) {
                    alert('登記課程成功');
                },
                error: function (xhr) {
                    const errorMessage = xhr.responseJSON && xhr.responseJSON.message
                        ? xhr.responseJSON.message
                        : '未知錯誤';
                    alert('登記課程失敗：' + errorMessage);
                }
            });
        }
    </script>
</body>
</html>
